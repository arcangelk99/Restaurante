<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="EzzysoftPU" 
                    transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>jdbc/EZZY</jta-data-source>
    <class>br.com.ezzysoft.restaurante.entidade.Bairro</class>
    <class>br.com.ezzysoft.restaurante.entidade.Cidade</class>
    <class>br.com.ezzysoft.restaurante.entidade.Cliente</class>
    <class>br.com.ezzysoft.restaurante.entidade.Colaborador</class>
    <class>br.com.ezzysoft.restaurante.entidade.Combinado</class>
    <class>br.com.ezzysoft.restaurante.entidade.Configuracao</class>
    <class>br.com.ezzysoft.restaurante.entidade.Email</class>
    <class>br.com.ezzysoft.restaurante.entidade.Empresa</class>
    <class>br.com.ezzysoft.restaurante.entidade.Endereco</class>
    <class>br.com.ezzysoft.restaurante.entidade.Grupo</class>
    <class>br.com.ezzysoft.restaurante.entidade.ItemPedido</class>
    <class>br.com.ezzysoft.restaurante.entidade.Logradouro</class>
    <class>br.com.ezzysoft.restaurante.entidade.Marca</class>
    <class>br.com.ezzysoft.restaurante.entidade.Pais</class>
    <class>br.com.ezzysoft.restaurante.entidade.Pedido</class>
    <class>br.com.ezzysoft.restaurante.entidade.Pessoa</class>
    <class>br.com.ezzysoft.restaurante.entidade.Produto</class>
    <class>br.com.ezzysoft.restaurante.entidade.ItemProduto</class>
    <class>br.com.ezzysoft.restaurante.entidade.Status</class>
    <class>br.com.ezzysoft.restaurante.entidade.Telefone</class>
    <class>br.com.ezzysoft.restaurante.entidade.Unidade</class>
    <class>br.com.ezzysoft.restaurante.entidade.UnidadeFederacao</class>
    <class>br.com.ezzysoft.restaurante.entidade.Usuario</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>

      <property name="eclipselink.logging.level" value="INFO"/>
      <property name="eclipselink.logging.level.sql" value="INFO"/>
      <property name="eclipselink.logging.parameters" value="FALSE"/>
      <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
      <property name="eclipselink.ddl-generation.output-mode" value="database"/>
      <property name="javax.persistence.sql-load-script-source" value="META-INF/createDDL_ddlGeneration.sql" />
    </properties>
  </persistence-unit>
</persistence>
